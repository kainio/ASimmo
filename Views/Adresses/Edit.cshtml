@model ASimmo.Models.Adresse

@{
    ViewData["Title"] = "Editer une adresse";
}

<h1>Editer une adresse</h1>

<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="AdresseId" />
			<div class="form-group">
				<label asp-for="Quartier" class="control-label"></label>
				<input asp-for="Quartier" class="form-control" />
				<span asp-validation-for="Quartier" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CodePostal" class="control-label"></label>
				<input asp-for="CodePostal" class="form-control" />
				<span asp-validation-for="CodePostal" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Ville" class="control-label"></label>
				<input asp-for="Ville" class="form-control" />
				<span asp-validation-for="Ville" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AdressePostale" class="control-label"></label>
				<input asp-for="AdressePostale" class="form-control" />
				<span asp-validation-for="AdressePostale" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PromoteurId" class="control-label"></label>
				<select asp-for="PromoteurId" class="form-control" asp-items="ViewBag.PromoteurId"></select>
			</div>
			<div class="form-group">
				<label class="control-label">Latitude</label>
				<input asp-for="Lat" class="form-control" />
			</div>
			<div class="form-group">
				<label class="control-label">Longitude</label>
				<input asp-for="Lon" class="form-control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Enregister" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
	<a asp-action="Index">Retourner à la liste des adresse</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
