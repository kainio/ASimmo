@model ASimmo.Models.TypeClassification

@{
    ViewData["Title"] = "Suppression d'un type de classification";
}

<h1>Suppression</h1>

<h3>Êtes-vous sûre de vouloir supprimer ce type de classification?</h3>
<div>
    <h4>Type de classification</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Libelle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Libelle)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TypeClassificationId" />
        <input type="submit" value="Supprimmer" class="btn btn-danger" /> |
		<a asp-action="Index">Retourner à la liste des types des classifications</a>
    </form>
</div>
