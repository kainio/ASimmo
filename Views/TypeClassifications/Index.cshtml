@model IEnumerable<ASimmo.Models.TypeClassification>

@{
    ViewData["Title"] = "Liste des types des classifications";
}

<h1>Liste des types des classifications</h1>

<p>
    <a asp-action="Create">Créer un nouveau type de classification</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libelle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Libelle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TypeClassificationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TypeClassificationId">Consulter</a> |
                <a asp-action="Delete" asp-route-id="@item.TypeClassificationId">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
