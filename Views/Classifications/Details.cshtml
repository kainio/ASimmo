        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recherchable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recherchable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrixMax)
        </dt>
        <dd class="col-sm-10">
