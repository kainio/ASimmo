@model ASimmo.Models.Local

@{
    ViewData["Title"] = "Créer un nouveau Local";
}

<h1>Créer un nouveau Local</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promoteur" class="control-label"></label>
                <select asp-for="PromoteurId" class ="form-control" asp-items="ViewBag.PromoteurId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Adresse" class="control-label"></label>
                <select asp-for="AdresseId" class ="form-control" asp-items="ViewBag.AdresseId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retourner à la liste des locaux</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
